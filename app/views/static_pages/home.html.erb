<div class="container">
  <% if user_signed_in? %>
    <script type="text/javascript">
      window.location.href="/posts"
    </script>
  <% else %>
    <div class="welcome">
      <h1 class="title">Welcome</h1>
      <%= button_to "Login", new_user_session_path, method: :get, class: "login btn" %>
      <%= link_to "Sign up", new_user_registration_path, method: :get %>
      <%= button_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, method: :post, data: {turbo: "false"} %>
    </div>
  <% end %>
</div>